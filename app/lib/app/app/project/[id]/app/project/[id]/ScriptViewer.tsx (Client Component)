"use client";
import { useState } from "react";

type Script = { id: string; title: string; body: string; createdAt: number };
type Project = { id: string; name: string; desc?: string; scripts: Script[]; createdAt: number };

const accent = "#00d4ff", gold = "#e2c97e", purple = "#7c6fff";
const card = "#111118", border = "#1e1e2e", border2 = "#252535";
const textPrimary = "#e8e8f0", textMuted = "#555570", textSub = "#8888aa";
const sectionColors = [accent, purple, gold, "#ff6b9d", "#4caf84", "#ff9f43"];
const sectionIcons = ["â—†", "â—‡", "â—‹", "â–³", "â–·", "â¬¡"];

function parseScript(raw: string) {
  const lines = raw.split("\n");
  const sections: { label: string | null; body: string; index: number }[] = [];
  let current: { label: string | null; body: string } | null = null;
  const headerPats = [
    /^#{1,3}\s+(.+)/,
    /^([A-Z][A-Z\s]{2,}):?\s*$/,
    /^\[(.+)\]$/,
    /^(?:\d+[\.\)]\s*)([A-Z].{2,50}):?\s*$/,
    /^(INTRO|HOOK|OPENING|BODY|CLOSING|CALL TO ACTION|CTA|OUTRO|FEATURES|OVERVIEW|HIGHLIGHTS|CONCLUSION|INTRODUCTION|WELCOME|DESCRIPTION|DETAILS|PRICE|OFFER|CONTACT|NEXT STEPS?|BRIDGE|PROBLEM|SOLUTION|BENEFITS?|TESTIMONIAL|STORY|QUESTION|ANSWER|TIP|NOTE|WARNING|REMINDER)[:\s]*/i,
  ];
  const isHeader = (l: string) => {
    const t = l.trim(); if (!t || t.length > 80) return null;
    for (const p of headerPats) { const m = t.match(p); if (m) return (m[1] || m[0]).replace(/^#+\s*/, "").replace(/:$/, "").trim(); }
    if (/^.{3,50}:$/.test(t) && t === t.charAt(0).toUpperCase() + t.slice(1)) return t.replace(/:$/, "");
    return null;
  };
  const flush = () => { if (current) { current.body = current.body.trim(); if (current.body || current.label) sections.push({ ...current, index: sections.length }); } };
  for (const line of lines) {
    const h = isHeader(line);
    if (h) { flush(); current = { label: h, body: "" }; }
    else if (!line.trim()) { if (current?.body.trim()) current.body += "\n\n"; }
    else { if (!current) current = { label: null, body: "" }; current.body += (current.body && !current.body.endsWith("\n\n") ? " " : "") + line.trim(); }
  }
  flush();
  if (sections.length <= 1 && sections[0] && !sections[0].label)
    return raw.split(/\n\s*\n/).map((p, i) => ({ label: null, body: p.trim(), index: i })).filter(s => s.body);
  return sections;
}

const Pill = ({ children, color = accent }: { children: React.ReactNode; color?: string }) => (
  <span style={{ background: color + "18", color, border: `1px solid ${color}33`, borderRadius: 99, padding: "2px 10px", fontSize: "0.7rem", fontFamily: "'JetBrains Mono',monospace", fontWeight: 600 }}>{children}</span>
);

function ScriptModal({ script, onClose }: { script: Script; onClose: () => void }) {
  const [active, setActive] = useState<number | null>(null);
  const sections = parseScript(script.body);
  const hasLabels = sections.some(s => s.label);

  return (
    <div style={{ position: "fixed", inset: 0, background: "#000000cc", zIndex: 200, overflowY: "auto" }} onClick={onClose}>
      <div style={{ maxWidth: 780, margin: "2rem auto", padding: "0 1rem 4rem" }} onClick={e => e.stopPropagation()}>
        <div style={{ display: "flex", justifyContent: "flex-end", marginBottom: "1rem" }}>
          <button onClick={onClose} style={{ background: "#1a1a2a", border: `1px solid ${border2}`, color: textSub, borderRadius: 8, padding: "6px 16px", cursor: "pointer", fontSize: "0.9rem" }}>âœ• Close</button>
        </div>
        <div style={{ background: card, border: `1px solid ${border}`, borderRadius: 16, padding: "2rem 2.5rem", marginBottom: "1.5rem", position: "relative", overflow: "hidden" }}>
          <div style={{ position: "absolute", top: 0, left: 0, right: 0, height: 2, background: `linear-gradient(90deg,${accent},#0055ff,transparent)` }} />
          <div style={{ color: accent, fontSize: "0.68rem", fontFamily: "'JetBrains Mono',monospace", fontWeight: 600, letterSpacing: 2, marginBottom: 10, textTransform: "uppercase" }}>Script</div>
          <h2 style={{ color: textPrimary, fontSize: "1.6rem", fontWeight: 800, marginBottom: 14, lineHeight: 1.2 }}>{script.title}</h2>
          <div style={{ display: "flex", gap: 8, flexWrap: "wrap" }}>
            <Pill color={accent}>{sections.length} sections</Pill>
            {hasLabels && <Pill color={purple}>auto-structured</Pill>}
            <Pill color={gold}>{new Date(script.createdAt).toLocaleDateString()}</Pill>
          </div>
        </div>

        {hasLabels && sections.length > 2 && (
          <div style={{ background: card, border: `1px solid ${border}`, borderRadius: 12, padding: "1rem 1.5rem", marginBottom: "1.5rem" }}>
            <div style={{ color: textMuted, fontSize: "0.68rem", fontFamily: "'JetBrains Mono',monospace", letterSpacing: 1.5, marginBottom: 10, textTransform: "uppercase" }}>Jump to section</div>
            <div style={{ display: "flex", gap: 6, flexWrap: "wrap" }}>
              <button onClick={() => setActive(null)} style={{ background: active === null ? accent + "20" : "#0d0d16", color: active === null ? accent : textMuted, border: `1px solid ${active === null ? accent + "44" : border2}`, borderRadius: 99, padding: "4px 14px", fontSize: "0.78rem", fontWeight: 600, cursor: "pointer" }}>All</button>
              {sections.map((s, i) => (
                <button key={i} onClick={() => setActive(active === i ? null : i)} style={{ background: active === i ? sectionColors[i % sectionColors.length] + "20" : "#0d0d16", color: active === i ? sectionColors[i % sectionColors.length] : textMuted, border: `1px solid ${active === i ? sectionColors[i % sectionColors.length] + "44" : border2}`, borderRadius: 99, padding: "4px 14px", fontSize: "0.78rem", cursor: "pointer", maxWidth: 160, overflow: "hidden", textOverflow: "ellipsis", whiteSpace: "nowrap" }}>{s.label || `Section ${i + 1}`}</button>
              ))}
            </div>
          </div>
        )}

        <div style={{ display: "flex", flexDirection: "column", gap: "1rem" }}>
          {sections.map((s, i) => {
            if (active !== null && active !== i) return null;
            const color = sectionColors[i % sectionColors.length];
            const paras = s.body.split(/\n\n/).filter(p => p.trim());
            return (
              <div key={i} style={{ background: card, border: `1px solid ${border}`, borderRadius: 14, overflow: "hidden", position: "relative" }}>
                <div style={{ position: "absolute", left: 0, top: 0, bottom: 0, width: 3, background: color }} />
                {s.label && (
                  <div style={{ borderBottom: `1px solid ${border}`, padding: "0.85rem 1.75rem", display: "flex", alignItems: "center", gap: 10, background: color + "08" }}>
                    <span style={{ color, fontSize: "0.72rem" }}>{sectionIcons[i % sectionIcons.length]}</span>
                    <span style={{ color, fontWeight: 700, fontSize: "0.8rem", textTransform: "uppercase", letterSpacing: 1.5, fontFamily: "'JetBrains Mono',monospace" }}>{s.label}</span>
                    <span style={{ marginLeft: "auto", color: border2, fontSize: "0.7rem", fontFamily: "'JetBrains Mono',monospace" }}>{String(i + 1).padStart(2, "0")}</span>
                  </div>
                )}
                <div style={{ padding: "1.5rem 1.75rem" }}>
                  {!s.label && <div style={{ position: "absolute", top: "1.2rem", right: "1.4rem", fontFamily: "'JetBrains Mono',monospace", color: border2, fontSize: "0.7rem", fontWeight: 700 }}>{String(i + 1).padStart(2, "0")}</div>}
                  {paras.length > 1
                    ? <div style={{ display: "flex", flexDirection: "column", gap: "1rem" }}>{paras.map((p, pi) => <p key={pi} style={{ color: "#c8c8e0", fontSize: "1.1rem", lineHeight: 2 }}>{p}</p>)}</div>
                    : <p style={{ color: "#c8c8e0", fontSize: "1.1rem", lineHeight: 2, paddingRight: s.label ? 0 : "2.5rem" }}>{s.body}</p>
                  }
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  );
}

export default function ScriptViewer({ project }: { project: Project }) {
  const [selected, setSelected] = useState<Script | null>(null);

  return (
    <div style={{ minHeight: "100vh" }}>
      {/* Topbar */}
      <div style={{ borderBottom: `1px solid ${border}`, padding: "0 1.5rem", display: "flex", alignItems: "center", height: 54, position: "sticky", top: 0, background: "#0a0a0fee", backdropFilter: "blur(14px)", zIndex: 100, gap: 10 }}>
        <div style={{ width: 26, height: 26, borderRadius: 6, background: `linear-gradient(135deg,${accent},#0055ff)`, display: "flex", alignItems: "center", justifyContent: "center", fontSize: 12, fontWeight: 800, color: "#fff" }}>S</div>
        <span style={{ color: textPrimary, fontWeight: 700, fontSize: "0.93rem" }}>RealtorScripts</span>
        <span style={{ color: border2 }}>â€º</span>
        <span style={{ color: textSub, fontSize: "0.85rem" }}>{project.name}</span>
      </div>

      <div style={{ maxWidth: 820, margin: "0 auto", padding: "2rem 1.5rem" }} className="fade-in">
        {/* Project header */}
        <div style={{ background: card, border: `1px solid ${border}`, borderRadius: 16, padding: "2rem 2.5rem", marginBottom: "2rem", position: "relative", overflow: "hidden" }}>
          <div style={{ position: "absolute", top: 0, left: 0, right: 0, height: 2, background: `linear-gradient(90deg,${accent},#0055ff,transparent)` }} />
          <h1 style={{ color: textPrimary, fontSize: "1.7rem", fontWeight: 800, marginBottom: 8 }}>{project.name}</h1>
          {project.desc && <p style={{ color: textMuted, fontSize: "0.9rem", marginBottom: 14 }}>{project.desc}</p>}
          <Pill color={accent}>{project.scripts.length} scripts</Pill>
        </div>

        {/* Scripts list */}
        {project.scripts.length === 0 ? (
          <div style={{ textAlign: "center", padding: "4rem 2rem", color: textMuted }}>
            <div style={{ fontSize: "2.5rem", marginBottom: "1rem" }}>ðŸ“„</div>
            <div>No scripts have been added to this project yet.</div>
          </div>
        ) : (
          <div style={{ display: "flex", flexDirection: "column", gap: "0.75rem" }}>
            {project.scripts.map((s, i) => {
              const sections = parseScript(s.body);
              const hasLabels = sections.some(sec => sec.label);
              return (
                <div key={s.id} className="hover-card" style={{ background: card, border: `1px solid ${border}`, borderRadius: 12, padding: "1.25rem 1.5rem", display: "flex", alignItems: "center", justifyContent: "space-between", gap: "1rem", flexWrap: "wrap", cursor: "pointer" }} onClick={() => setSelected(s)}>
                  <div style={{ display: "flex", alignItems: "center", gap: 14 }}>
                    <div style={{ width: 38, height: 38, borderRadius: 9, background: "#0d0d1a", border: `1px solid ${border2}`, display: "flex", alignItems: "center", justifyContent: "center", fontFamily: "'JetBrains Mono',monospace", color: accent, fontSize: "0.8rem", fontWeight: 700, flexShrink: 0 }}>{String(i + 1).padStart(2, "0")}</div>
                    <div>
                      <div style={{ color: textPrimary, fontWeight: 600, fontSize: "0.95rem", marginBottom: 4 }}>{s.title}</div>
                      <div style={{ display: "flex", gap: 6, flexWrap: "wrap", alignItems: "center" }}>
                        <Pill color={accent}>{sections.length} sections</Pill>
                        {hasLabels && <Pill color={purple}>structured</Pill>}
                        <span style={{ color: textMuted, fontSize: "0.76rem" }}>{new Date(s.createdAt).toLocaleDateString()}</span>
                      </div>
                    </div>
                  </div>
                  <span style={{ color: accent, fontSize: "0.85rem", fontWeight: 600 }}>Read â†’</span>
                </div>
              );
            })}
          </div>
        )}
      </div>

      {selected && <ScriptModal script={selected} onClose={() => setSelected(null)} />}
    </div>
  );
}
